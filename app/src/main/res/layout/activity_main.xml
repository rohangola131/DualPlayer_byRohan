<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#0f0f0f"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="12dp">

        <LinearLayout
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Title -->
            <TextView
                android:id="@+id/appTitle"
                android:text="@string/app_name"
                android:textColor="#FFF"
                android:textSize="22sp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <!-- Discourse Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:cardCornerRadius="12dp"
                android:cardElevation="6dp"
                android:background="#1a1a1a">

                <LinearLayout
                    android:padding="14dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/discourseTitle"
                        android:text="No discourse selected"
                        android:textColor="#fff"
                        android:textSize="18sp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageButton
                            android:id="@+id/discPrev"
                            android:src="@android:drawable/ic_media_previous"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:tint="#FFFFFF"
                            android:layout_width="48dp"
                            android:layout_height="48dp"/>

                        <ImageButton
                            android:id="@+id/discPlayPause"
                            android:src="@android:drawable/ic_media_play"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:tint="#00E5B4"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            android:layout_width="64dp"
                            android:layout_height="64dp"/>

                        <ImageButton
                            android:id="@+id/discNext"
                            android:src="@android:drawable/ic_media_next"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:tint="#FFFFFF"
                            android:layout_width="48dp"
                            android:layout_height="48dp"/>

                        <Space android:layout_width="8dp" android:layout_height="wrap_content"/>

                        <Button
                            android:id="@+id/selectDiscourseFolder"
                            android:text="@string/select_discourse"
                            android:layout_marginStart="8dp"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <SeekBar
                        android:id="@+id/discSeek"
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/discTime"
                        android:textColor="#aaa"
                        android:text="00:00 / 00:00"
                        android:layout_marginTop="6dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <!-- Volume -->
                    <SeekBar
                        android:id="@+id/discVolume"
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Music Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:cardCornerRadius="12dp"
                android:cardElevation="6dp"
                android:background="#1a1a1a">

                <LinearLayout
                    android:padding="14dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/musicTitle"
                        android:text="No music selected"
                        android:textColor="#fff"
                        android:textSize="18sp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageButton
                            android:id="@+id/musicPrev"
                            android:src="@android:drawable/ic_media_previous"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:tint="#FFFFFF"
                            android:layout_width="48dp"
                            android:layout_height="48dp"/>

                        <ImageButton
                            android:id="@+id/musicPlayPause"
                            android:src="@android:drawable/ic_media_play"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:tint="#00E5B4"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            android:layout_width="64dp"
                            android:layout_height="64dp"/>

                        <ImageButton
                            android:id="@+id/musicNext"
                            android:src="@android:drawable/ic_media_next"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:tint="#FFFFFF"
                            android:layout_width="48dp"
                            android:layout_height="48dp"/>

                        <Space android:layout_width="8dp" android:layout_height="wrap_content"/>

                        <Button
                            android:id="@+id/selectMusicFolder"
                            android:text="@string/select_music"
                            android:layout_marginStart="8dp"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <SeekBar
                        android:id="@+id/musicSeek"
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/musicTime"
                        android:textColor="#aaa"
                        android:text="00:00 / 00:00"
                        android:layout_marginTop="6dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <SeekBar
                        android:id="@+id/musicVolume"
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Playlist (RecyclerView) -->
            <androidx.cardview.widget.CardView
                android:layout_marginTop="12dp"
                android:cardCornerRadius="12dp"
                android:cardElevation="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:padding="12dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Playlist (selected folder)"
                        android:textColor="#fff"
                        android:textSize="16sp"
                        android:layout_marginBottom="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/playlistRecycler"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
