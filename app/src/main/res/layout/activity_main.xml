<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="8dp">

        <!-- Section 1: Discourse Player -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="📖 Discourse Player"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingBottom="8dp" />

        <Button
            android:id="@+id/selectDiscourseFolder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Discourse Folder" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/discPrev"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⏮ Prev" />

            <Button
                android:id="@+id/discPlayPause"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="▶️ Play"
                android:layout_marginHorizontal="12dp" />

            <Button
                android:id="@+id/discNext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Next ⏭" />
        </LinearLayout>

        <SeekBar
            android:id="@+id/discSeek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" />

        <SeekBar
            android:id="@+id/discVolume"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#cccccc"
            android:layout_marginVertical="12dp" />

        <!-- Section 2: Music Player -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🎵 Music Player"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingBottom="8dp" />

        <Button
            android:id="@+id/selectMusicFolder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Music Folder" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/musicPrev"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⏮ Prev" />

            <Button
                android:id="@+id/musicPlayPause"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="▶️ Play"
                android:layout_marginHorizontal="12dp" />

            <Button
                android:id="@+id/musicNext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Next ⏭" />
        </LinearLayout>

        <SeekBar
            android:id="@+id/musicSeek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" />

        <SeekBar
            android:id="@+id/musicVolume"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp" />

        <!-- Playlist RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/playlistRecycler"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="16dp"
            android:scrollbars="vertical" />

    </LinearLayout>
</ScrollView>
